@using ParkyWeb.Models.ViewModel;
@model TrailsVM

@{
    var title = "Create Trail";

    //var imgSrc = String.Format("data:image/jpg;base64,{0}", Model.CurrentPicture);
}

<form method="post" asp-action="Upsert">

    <div class="row px-2 mx-2 backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
            title = "Edit Trail";
        }

        <div class="col-12 p-3">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8">
            <div class="form-group row mb-1">
                <div class="col-4">
                    National Park
                </div>
                <div class="col-8">

                    @*@Html.DropDownListFor(m=>m.Trail.NationalParkId,
                    Model.NationalParkList,"-Please select a park-", new { @class="form-control" })
                    <span asp-validation-for="NationalParkList" class="text-danger"></span>*@
                    
                    <select data-placeholder="-Please select a park-" asp-for="NationalParkId" class="form-control" asp-items="ViewBag.NationalParks"></select>
                    <span asp-validation-for="NationalParkId" class="text-danger"></span>
                    <input type="hidden" name="Model.NationalParkList" />

                </div>
            </div>
            <div class="form-group row mb-1">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <div class="col-4">
                    <label asp-for="Difficulty"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Difficulty"
                            asp-items="Html.GetEnumSelectList<Trail.DifficultyType>()"
                            class="form-control"></select>
                </div>
            </div>

            <div class="form-group row mb-1">
                <div class="col-4">
                    <label asp-for="Distance"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Distance" class="form-control" />
                    <span asp-validation-for="Distance" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <div class="col-4">
                    <label asp-for="Elevation"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Elevation" class="form-control" />
                    <span asp-validation-for="Elevation" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-1">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-lg btn-primary form-control">
                        @(Model.Id != 0 ? "Update" : "Create")
                    </button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-lg btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>

    </div>

</form>

