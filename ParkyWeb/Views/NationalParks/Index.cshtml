<div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">National Park List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary text-white"><i class="fas fa-plus"></i> &nbsp; Create New National Park</a>
        </div>
    </div>
    <br />
    <br />
    <div style="background-color:#cde8e2" class="p-4 rounded">
        <table id="tblData" class="table table-striped table-bordered table-hover" style="width:100%">
            <thead>
                <tr class="table-danger">
                    <th>Id</th>
                    <th>Name</th>
                    <th>State</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/nationalPark.js"></script>
}


